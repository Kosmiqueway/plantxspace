---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const base = import.meta.env.BASE_URL;
const entries = await getCollection("sandbox");
---

<Layout title="Sandbox" description="Community ideas and experiments (non-canon)" editPath="src/pages/sandbox.astro">
  <section class="section">
    <h1>Sandbox</h1>
    <p>Community proposals and experiments. Not peer-reviewed; treat as hypotheses.</p>
  </section>

  <section class="section">
    <h2>Entries</h2>
    <div class="cards">
      {entries.map((item) => (
        <article class="card">
          <h3>{item.data.title}</h3>
          <p>{item.data.summary}</p>
          <div class="meta-row">
            <span class="badge sandbox">Level {item.data.level_of_evidence}</span>
            <span>{item.data.year}</span>
            <span>{item.data.tags.join(", ")}</span>
          </div>
          <p>
            <a href={item.data.source}>Source</a> Â· <strong>Non-canon</strong>
          </p>
        </article>
      ))}
    </div>
  </section>
</Layout>
